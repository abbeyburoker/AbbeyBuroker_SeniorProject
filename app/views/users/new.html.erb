<h1>New User</h1>

<%= render 'form', user: @user %>

<%= form_for(@user) do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.email_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :submit %>
<%= f.button :submit %>

<%= link_to 'Back', users_path %>
