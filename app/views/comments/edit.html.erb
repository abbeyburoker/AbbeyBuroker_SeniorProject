      <script src="https://maxcdn.bootstrapcdn.com/bootsrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <% if @comment.user_id == current_user.id %>
		<br><br><br><br><br><br>
		<%= simple_form_for([@message, @comment]) do |f| %>
			<%= f.input :content, label: "Edit Comment" %>
			<%= f.button :submit, class: "btn btn-primary" %>
		<% end %>
	<% else %>
    	<br><br><br><br><br> <br>
    	<h3> Error: you do not have access to this page </h3>
    <% end %>
   </body>
</html> 
