<!DOCTYPE html>
<html>
  <head>
    <title>Mentor Connection</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse" role="navigation"></header>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%=message_type %>"><%= message%></div>
      <% end %>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <div class="style_image">
            <h1><%= image_tag "DePauw_Tigers_logo.png", :width => "75px", :height => "auto" %> Mentor Connection </h1>
          </div>
          <ul class="nav navbar-nav nav-right">
            <% if logged_in? %>
            <li><%= link_to "Home", :controller => 'home', :action => 'index'%></li>
            <li><%= link_to "Directory", :controller => 'directories', :action => 'index'%></li>
            <li><%= link_to "Message Board", :controller => 'message_boards', :action => 'index'%></li>
            
            
             <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Account <b class="caret"></b>
                </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: "delete" %>
                </li>
              </ul>
             </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
          </ul>
        </nav>
        </ul>
      </div>
    </header>
    <div class="container">
        <br /><br /><br /><br />
    </div>
    <%= yield %>

      <div class="footer">
        <p>DePauw University First-Year Mentor Program Resource Center</p>
        <p>Office of Student Academic Life | 408 S. Locust St. | Greencastle, IN 46135</p>
      </div>
    
  </body>
</html>
